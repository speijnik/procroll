{
  "formatters": {
    "enable": [
      "gofumpt",
      "goimports"
    ],
    "exclusions": {
      "generated": "lax",
      "paths": [
        "third_party$",
        "builtin$",
        "examples$"
      ]
    },
    "settings": {
      "goimports": {
        "local-prefixes": [
          "github.com/speijnik/procroll"
        ]
      }
    }
  },
  "linters": {
    "default": "none",
    "enable": [
      "asasalint",
      "bodyclose",
      "copyloopvar",
      "dogsled",
      "dupl",
      "dupword",
      "errcheck",
      "errorlint",
      "funlen",
      "goconst",
      "gocritic",
      "gocyclo",
      "godot",
      "goprintffuncname",
      "gosec",
      "govet",
      "ineffassign",
      "misspell",
      "mnd",
      "nakedret",
      "noctx",
      "nolintlint",
      "perfsprint",
      "revive",
      "rowserrcheck",
      "sqlclosecheck",
      "staticcheck",
      "unconvert",
      "unparam",
      "unused",
      "usestdlibvars",
      "usetesting",
      "whitespace"
    ],
    "exclusions": {
      "generated": "lax",
      "paths": [
        "third_party$",
        "builtin$",
        "examples$"
      ],
      "presets": [
        "comments",
        "common-false-positives",
        "legacy",
        "std-error-handling"
      ],
      "rules": [
        {
          "path": "(.+)\\.go$",
          "text": "EXC0001"
        }
      ]
    },
    "settings": {
      "funlen": {
        "lines": 100,
        "statements": 50
      },
      "gocyclo": {
        "min-complexity": 15
      },
      "govet": {
        "disable": [
          "fieldalignment"
        ],
        "enable-all": true
      },
      "misspell": {
        "locale": "US"
      },
      "nolintlint": {
        "allow-unused": false,
        "require-explanation": true,
        "require-specific": true
      },
      "revive": {
        "confidence": 0
      }
    }
  },
  "version": "2"
}
